<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        app:cardCornerRadius="16dp"
        app:cardElevation="1dp"
        android:layout_margin="2dp"
        app:cardUseCompatPadding="false"
        app:contentPadding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" android:layout_height="wrap_content"
        android:id="@+id/rowuser">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="93dp"
                android:layout_height="93dp" tools:srcCompat="@drawable/bg_circle"
                android:id="@+id/ivuser_u"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                app:civ_border_color="@android:color/holo_red_light"
                app:civ_border_width="4dp"
                android:layout_marginBottom="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/tvusername_u" android:layout_marginEnd="45dp"
                tools:src="@drawable/avatar"/>
        <TextView
                android:text="TextView"
                android:layout_width="201dp"
                android:layout_height="36dp"
                android:textSize="24sp"
                android:id="@+id/tvusername_u"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="48dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="49dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/ivuser_u"
                android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:textColor="@android:color/darker_gray"
                android:text="TextView"
                android:id="@+id/tv_uid" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/tvusername_u" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/ivamiiboc"
                android:layout_marginStart="225dp" app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="0.0" android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>